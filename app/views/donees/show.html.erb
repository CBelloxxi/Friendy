<h1>show card of the donee</h1>

<%= cl_image_tag @donee.photo.key, height: 150, width: 150, crop: :fill %>
<h2><%= @donee.first_name %> <%= @donee.last_name %> </h2>
<p> <%= @donee.location %> </p>
<p> <%= @donee.description %> </p>

<div class="qr-code">
  <%= @qr_code.html_safe %>
</div>

<%= link_to "All Donees", donees_path %>

<%= link_to "Edit", edit_donee_path(@donee) %>

<%= link_to "Delete #{@donee.first_name}?",
    donee_path(@donee),
    method: :delete,
    data: { confirm: "Are you sure?" } %>
