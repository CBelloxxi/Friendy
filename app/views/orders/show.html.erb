<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= image_tag @order.donee.photo_url, width: '100%' %></div>
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>DONEE</strong> <%= @order.donee.first_name %></li> [<%=# @order.teddy_sku %>]</li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
        </li>
      </ul>
      <p>optional <strong>Custom Message</strong></p>
    </div>
  </div>
</div>
