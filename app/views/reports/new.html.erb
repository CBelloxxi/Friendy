<div class="new-report-form" style="text-align:center;">
  <br>
  <%= simple_form_for [@donee, @report] do |f| %>
  <%= f.input :location, input_html: { class: 'd-none', data: { geocoder_target: "location" } }, wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
    <%= f.input :assistance_type, collection: ["Emergency", "Non-Emergency"] %>
    <%= f.input :message, as: :text %>
    <div class="button">
      <%= f.submit "Create Report" %>
      <div class="back-btn">
        <%= link_to "Back", donees_path, class: "btn-fr-1" %>
      </div>
    </div>
  <% end %>
</div>
