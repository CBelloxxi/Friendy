<div class="map-marker-info">
  <div class="map-info">
    <div>
      <%= report.donee.first_name %>
      <%= report.donee.last_name %>
    </div>
    <div>
      <%= report.location %>
    </div>
    <div>
      <%= report.assistance_type %>
    </div>
  </div>
  <div>
  <%= report.message %>
  </div>
  <div class="pin-buttons">
    <%= simple_form_for(@report) do |f| %>
    <%= f.input :completed, as: :boolean, input_html: { class: "toggle" } %>
    <% end %>
    <div class="edit-map" style="font-size:10px; color:black;">
      <%= link_to "Edit", edit_report_path(@report)%>
    </div>
  </div>
</div>
